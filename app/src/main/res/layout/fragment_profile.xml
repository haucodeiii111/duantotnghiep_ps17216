<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@drawable/back02"
            android:layout_marginTop="40dp"/>
        <!--    Toolbar-->
        <RelativeLayout
            android:id="@+id/toolbarRl"
            android:background="@drawable/shape_toolbar02"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <!--        back button-->
            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/jost_semibold"
                android:text="Profile"
                android:textColor="@color/white"
                />
            <!--        out imagaeView-->
            <ImageView
                android:id="@+id/customer_information_logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_logout_white" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect01"
            android:layout_marginTop="180dp"/>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_customer_profle_fragment"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:background="@color/white"
                android:src="@mipmap/user_1"
                app:shapeAppearance="@style/styleRoundeCornersImage"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginStart="120dp"
                app:cardCornerRadius="100dp"

                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/customer_information_update_btn"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_white"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <!--    shapeable image view with rounded corners for profile image-->

        <TextView
            android:id="@+id/fragment_customer_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:text="FullName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/detailsLl"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/fragment_customer_tv_name"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <!--        Account-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/accountTypeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!--        Member Since-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/memberDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!--        Favorite Books Count-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite Books"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/favoriteBookCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray03"
            android:layout_below="@id/detailsLl"/>
        <TextView
            android:id="@+id/favoriteBooksLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:text="Favorite Books"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/booksRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_below="@+id/favoriteBooksLabelTv"/>
    </RelativeLayout>
</RelativeLayout>